<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ global.title }}</title>

    <!-- Add the InstantClick PAJAX System -->
    <script data-no-instant src="{{ url('js/instantclick.min.js') }}"></script>

    <!-- Load standard site stylesheets. -->
    <link data-no-instant rel="stylesheet" href="{{ url('/css/lablog.css') }}">
    <link data-no-instant href="{{ url('/css/prettify.css') }}" type="text/css" rel="stylesheet" />

    {% include 'lablog.layout.analytics' %}

    <!-- Load typekit scripts in header. -->
    <script data-no-instant type="text/javascript" src="//use.typekit.net/dcx4uyu.js"></script>
    <script data-no-instant type="text/javascript">try{Typekit.load();}catch(e){}</script>

    <!-- Load any other fonts. -->
    <script data-no-instant src="//use.edgefonts.net/alex-brush;alexa-std.js"></script>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,400italic,300,300italic,500,500italic,700' rel='stylesheet' type='text/css'>

    <!-- Load HTML5 Shif for backwards IE8 compatibility. -->
    <!--[if lt IE9]><script data-no-instant src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.js"></script><![endif]-->

    <!-- Load google code prettify. -->
    <script data-no-instant src="https://google-code-prettify.googlecode.com/svn/loader/prettify.js"></script>
</head>
<body>
    {% block header %}
        <header>
            <section class="welcome">
                <h1 class="lablog">LaBlog</h1>
                <p>A blogging platform built on <a href="http://laravel.com">Laravel</a></p>
            </section>
            <nav class="header-navigation">
                <div class="container">
                    <a href="{{ url('/') }}"><i class="fa fa-fw fa-home"></i> Home</a>
                    <a href="{{ url('plugins') }}"><i class="fa fa-fw fa-cog"></i> Plugins</a>
                    <a href="{{ url('changelog') }}"><i class="fa fa-fw fa-exchange"></i> Change Log</a>
                    <a target="_blank" href="http://github.com/lablog"><i class="fa fa-fw fa-github"></i> GitHub</a>
                    <!--<a target="_blank" href=""><i class="fa fa-fw fa-twitter"></i> Twitter</a>-->
                </div>
            </nav>
        </header>
    {% endblock %}

    <main>
        <div class="container">
            <aside class="side-navigation">
                <h1 class="documentation-version">Version 0.1.x</h1>
                <h2>Basic</h2>
                <ul>
                    <li>
                        <a href="{{ url('documentation/basic/getting_started') }}">Getting Started</a>
                    </li>
                    <li>
                        <a href="{{ url('documentation/basic/posts_and_pages') }}">Posts &amp; Pages</a>
                    </li>
                </ul>

                <h2>Advanced</h2>
                <ul>
                    <li><a href="{{ url('documentation/advanced/global_config') }}">Global Config</a></li>
                    <li><a href="{{ url('documentation/advanced/blog_config') }}">Blog Config</a></li>
                    <li><a href="{{ url('documentation/advanced/post_page_config') }}">Post/Page Config</a></li>
                    <li><a href="{{ url('documentation/advanced/class_bindings') }}">Class Bindings</a></li>
                </ul>

                <h2>Theming (Coming Soon)</h2>
                <ul>
                    <li><a disabled="disabled" href="">Theme Setup and Files</a></li>
                    <li><a disabled="disabled" href="">Template Functions and Filters</a></li>
                    <li><a disabled="disabled" href="">Twig Templates</a></li>
                    <li><a disabled="disabled" href="">Twig Template Extensions</a></li>
                </ul>
            </aside>
            <section class="content">
                {% block content %}

                {% endblock %}
            </section>
        </div>
    </main>

    {% block footer %}
        <footer>
            <section class="copyright">
                <p>LaBlog. An open source project. Copyright &copy; <a href="http://twitter.com/TheJoeRalph">Joseph Ralph</a>.</p>
            </section>
        </footer>
    {% endblock %}

    {% block scripts %}
        <!-- Load jQuery from google CDN. -->
        <script data-no-instant src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

        <!-- Add prettyprint classes to pre tags. -->
        <script data-no-instant>
            InstantClick.on('change', function() {
                $('pre').addClass('prettyprint');
                // Initialize prettyPrint.
                prettyPrint();
            });
        </script>

        <!-- Initialise InstantClick after everything. -->
        <script data-no-instant>
            InstantClick.init(50);
        </script>
    {% endblock %}
</body>
</html>
